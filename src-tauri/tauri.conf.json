{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "n8n-desktop",
  "version": "1.0.2",
  "identifier": "com.mrtang.n8n",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "n8n Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* ws://localhost:*; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://localhost:* ws://localhost:*"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "resources/**/*"
    ],
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2026 n8n Desktop",
    "shortDescription": "Desktop application for n8n workflow automation",
    "longDescription": "A native desktop application for running n8n workflow automation locally with zero configuration required."
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/mrtang/n8n-desktop/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    },
    "store": {
      "active": true
    }
  }
}